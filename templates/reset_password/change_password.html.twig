{% extends 'userLayout.html.twig' %}

{% block title %} Changement de mot de passe {{ parent() }}{% endblock %}

{% block body %}

    <section class="change-password">
        <div class="container my-3">

            <h1 class="text-center display-4 pt-5 my-5">Changez votre mot de passe</h1>


            <div class="card mx-auto">
                {{ form_start(form) }}
                <div class="card-body">
                    {{ form_label(form.plainPassword.first) }}
                    {{ form_widget(form.plainPassword.first) }}
                    {{ form_label(form.plainPassword.second) }}
                    {{ form_widget(form.plainPassword.second) }}
                    <div class="row justify-content-center">
                    <button class="btn btn-outline col-11 col-md-6 mt-4">Confirmer</button>
                    </div>
                    {{ form_end(form) }}
                </div>

            </div>
        </div>
    </section>

{% endblock %}