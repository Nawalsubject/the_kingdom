{% extends 'userLayout.html.twig' %}

{% block title %}Connexion {{ parent() }}{% endblock %}

{% block body %}


    <section class="log-in">

        <div class="jumbotron">
            <div class="container-fluid">
            </div>
        </div>

        <div class="bg-section-limit"></div>
        <div class="bg-section">

            <div class="container pb-5">

                <h1 class="text-center mb-4">Connexion</h1>

                <p class="text-center no-register">Pas encore inscrit ?<a href="{{ path('app_register') }}"> Inscrivez vous !</a></p>

                <div class="card mx-auto">
                    <form method="post">
                        <div class="card-body justify-content-center">
                            {% if error %}
                                <div class="alert alert-danger my-1 col-12">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <label for="inputEmail" class="col-form-label">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                   class="form-control"
                                   placeholder="email@gmail.com" required autofocus>

                            <label for="inputPassword" class="col-form-label">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control"
                                   placeholder="Mot de passe"
                                   required>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="row justify-content-center">
                                <button class="btn btn-form col-11 col-md-4 mt-4" type="submit">Se connecter</button>
                            </div>
                            <div class="checkbox mt-3 text-center">
                                <input type="checkbox" id="_remember_me" name="_remember_me"/>
                                <label class="form-check-label" for="_remember_me"> Se rappeler de moi </label>
                            </div>
                        </div>
                    </form>
                    <a class="text-center mb-2" href="{{ path('reset_password_request') }}">Mot de passe oubli√© ?</a>
                </div>

            </div>
        </div>

    </section>

{% endblock %}
