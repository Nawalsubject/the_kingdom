{% extends 'userLayout.html.twig' %}

{% block title %}Modification des métiers {{ parent() }}{% endblock %}

{% block body %}

    <section class="user-jobs-edit">

        <div class="container pb-5">

            <h1 class="text-center mb-4">Modification des métiers</h1>

            <div class="card mx-auto">
                {{ form_start(jobsForm) }}
                <div class="card-body justify-content-center">
                    <div class="row">

                        {% for job in jobsForm.jobs %}
                            <div class="col-12">
                                {% if loop.index == 1 %}
                                    {% set trade = job.vars.attr.trade %}
                                    <h5 class="ml-5 mt-5">
                                        {{ trade }}:
                                    </h5>
                                {% endif %}
                                {% if job.vars.attr.trade != trade %}
                                    {% set trade = job.vars.attr.trade %}
                                    <h5 class="ml-5 mt-5 form-trade">
                                        {{ trade }}:
                                    </h5>
                                {% endif %}
                                {{ form_widget(job) }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="row justify-content-center">
                    <button class="btn btn-form col-10 col-md-4 mb-3 mt-3 py-3">Valider</button>
                </div>
                {{ form_end(jobsForm) }}
            </div>

        </div>
    </section>
{% endblock %}
